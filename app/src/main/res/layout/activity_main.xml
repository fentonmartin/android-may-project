<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fen.code.mayproject.MainActivity"
    android:background="#77000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_picture"
                    android:src="@drawable/m01"
                    android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m01_name"
                    android:padding="4sp"
                    android:background="#77000000"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_title" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/m01_desb"
                android:padding="8sp"
                android:textColor="@color/colorTextWhite"
                android:background="#55000000"
                android:textSize="@dimen/text_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#77000000">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_call"
                    android:id="@+id/imageView"
                    android:layout_marginLeft="8sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/m01_telp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_marginLeft="4sp"
                    android:textColor="#f2f2f2"
                    android:textSize="@dimen/text_content" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:id="@+id/imageButton"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="#55000000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/m01_desc"
                android:padding="8sp"
                android:textColor="@color/colorTextWhite"
                android:background="#55000000"
                android:textSize="@dimen/text_content" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
